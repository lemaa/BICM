{
    "compilerOptions": {
       "lib": [
          "es5",
          "es6"
       ],
       "target": "es2017",
       "module": "commonjs",
       "moduleResolution": "node",
       "outDir": "./build",
       "types": ["reflect-metadata"],
       "emitDecoratorMetadata": true,
       "experimentalDecorators": true,
       "esModuleInterop": true,
       "sourceMap": true,
       "typeRoots": [
         "./node_modules/@types",
         "./src/types"
       ],
    },
    "include": [
      "./src/**/*"
    ],
    "exclude": [
      "node_modules"
     ]
 }